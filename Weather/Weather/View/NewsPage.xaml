                                    </ScrollView>

                                    <pancakeview:PancakeView BackgroundColor="Black" Grid.Column="2" Grid.Row="0" Grid.RowSpan="5" HeightRequest="100" WidthRequest="100" CornerRadius="0,20,0,20" HorizontalOptions="Center" VerticalOptions="Center">
