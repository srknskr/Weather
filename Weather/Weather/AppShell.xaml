             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Weather.View"
             mc:Ignorable="d"
             x:Class="Weather.AppShell"
             Shell.NavBarIsVisible="False">
